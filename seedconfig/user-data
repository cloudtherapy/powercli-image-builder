#cloud-config
#vim:syntax=yaml
users:
# A user by the name `ec2-user` is created in the image by default.
  - default
  - name: ansible
    ssh-authorized-keys:
      - ssh-rsa 
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: sudo
    shell: /bin/bash

#chpasswd:
#  list: |
#    ec2-user:amazon

# In the above line, do not add any spaces after 'ec2-user:'.

runcmd:
  - yum install -y https://dl.fedoraproject.org/pub/epel/epel-release-latest-7.noarch.rpm
  - yum install -y libselinux-python
  - yum install -y firewalld
  - yum install -y ansible
  - yum upgrade -y
  # Found an issue with leveraging poweroff, switched to shutdown
  - shutdown -h now

# NOTE: Cloud-init applies network settings on every boot by default. To retain network settings from first
boot, add following ‘write_files’ section:
write_files:
  - path: /etc/cloud/cloud.cfg.d/80_disable_network_after_firstboot.cfg
    content: |
      # Disable network configuration after first boot
      network:
        config: disabled
  - path: /etc/cloud/cloud.cfg.d/90_enable_pw_auth.cfg
    content: |
      # Enable password authentication after first boot
      ssh_pwauth: True
